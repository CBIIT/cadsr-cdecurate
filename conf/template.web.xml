	<context-param>
		<param-name>Owasp.CsrfGuard.Config</param-name>
		<param-value>WEB-INF/Owasp.CsrfGuard.properties</param-value>
	</context-param>
	
	<context-param>
		<param-name>Owasp.CsrfGuard.Config.Print</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.owasp.csrfguard.CsrfGuardListener</listener-class>
	</listener>

	<filter>
		<filter-name>CSRFGuard</filter-name>
		<filter-class>org.owasp.csrfguard.CsrfGuardFilter</filter-class>
	</filter>
 	
	<filter-mapping>
		<filter-name>CSRFGuard</filter-name> 
		<url-pattern>/cdecurate/*</url-pattern>
	</filter-mapping>
<!-- JR1107 end -->
	
  <session-config>
    <session-timeout>45</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>/jsp/index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Application Tag Library Descriptor -->
  <jsp-config> 
  <taglib>
    <taglib-uri>/WEB-INF/tld/curate.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/curate.tld</taglib-location>
  </taglib>
<!-- JR1107 begin -->
  <jsp-property-group>
          <url-pattern>*.jsp</url-pattern>
          <el-ignored>false</el-ignored>
          <include-prelude>/WEB-INF/jspf/taglibs.jspf</include-prelude>
  </jsp-property-group>
<!-- JR1107 end -->
  </jsp-config>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
    <form-login-page>/jsp/LoginE.jsp</form-login-page>
    <form-error-page>/jsp/LoginE.jsp</form-error-page>
    </form-login-config>
  </login-config>

</web-app>

