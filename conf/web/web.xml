<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC
     "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<!-- 
    $Header: /cvsshare/content/cvsroot/cdecurate/conf/web/web.xml,v 1.24 2006-11-03 18:22:34 hegdes Exp $
    $Name: not supported by cvs2svn $
-->
<web-app>
  <description>cdecurate</description>

  <servlet>
     <servlet-name>
         NCICurationServlet
     </servlet-name>
     <servlet-class>
         gov.nih.nci.cadsr.cdecurate.tool.NCICurationServlet
     </servlet-class>
	<init-param>
      <param-name>jbossDataSource</param-name>
      <param-value>jdbc/CDECurateDS</param-value>
    </init-param>
    <init-param>
      <param-name>username</param-name>
      <param-value>cdecurate</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>cdecurate</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>

  </servlet>

  <servlet-mapping>
     <servlet-name>
         NCICurationServlet
     </servlet-name>
     <url-pattern>
         /NCICurationServlet
     </url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>45</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>LoginE.jsp</welcome-file>
  </welcome-file-list>

  <!-- Application Tag Library Descriptor -->
  <taglib>
    <taglib-uri>/WEB-INF/tld/curate.tld</taglib-uri>
    <taglib-location>/WEB-INF/tld/curate.tld</taglib-location>
  </taglib>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
    <form-login-page>LoginE.jsp</form-login-page>
    <form-error-page>LoginE.jsp</form-error-page>
    </form-login-config>
  </login-config>

</web-app>

